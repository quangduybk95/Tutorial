<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "sample app", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Help", help_path %></li>
        <% if logged_in? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.email %>
                <span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><%= link_to "User Infomation", user_path(current_user) %></li>
                <li><%= link_to "Sign out", logout_path, method: :delete %></li>

              </ul>
            </li>
        <% else %>
            <li><%= link_to "Log in", login_path %></li>
            <li><%= link_to "Sign up", signup_path %></li>
        <% end %>


      </ul>
    </nav>
  </div>
</header>
